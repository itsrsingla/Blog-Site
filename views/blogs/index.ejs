<%- include('../partials/header') %>
<div class="top-section">
    <div class="top-container">
        <h1>Read the latest blogs !!!</h1>
        <a href="/blog/new">Write new blogs</a>
    </div>
</div>
<div class="content-section">
        <div class=content-heading>
            <h2>BlogList</h2>
        </div>
            <% blogs.forEach(function(blog){ %>
            <div class="one-blog">
                <img src="https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8YmxvZ3xlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=60">
                <h3><%=blog.title%></h3>
                <p>Author - <%-blog.author.username%></p>
                <a href="/blog/<%=blog._id%>">Read the blog</a>
            </div>
            <% }) %>
</div>
<%- include('../partials/footer') %>
